.background
{
  position: fixed;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  background-color: #00000099;
}
.panel
{
  width: 600rpx;
  padding: 20rpx;
}
.panel>view
{
  width: 100%;
}
input
{
  background-color: #e9e9e9;
  width: 100%;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}
.btns
{
  margin-top: 20rpx;
}
.btn
{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: 600;
}
.title
{
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
}
.money
{
  height: 80rpx;
