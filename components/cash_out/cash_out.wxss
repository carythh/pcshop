  align-items: flex-start;
  justify-content: flex-start;
}
.flex_row_end
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.flex_row_center
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
