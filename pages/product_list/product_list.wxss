/* pages/product_list/product_list.wxss */
page
{
  background-color: #e9e9e9;
}
/* 头部搜索栏 */
.head
{
  display: flex;
  flex-direction: row;
  background-color: #1196db;
  align-items: center;
  justify-content: center;
  padding-top: 4px;
  padding-bottom: 4px;
}
.title
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color:#e9e9e9;
  box-sizing: border-box;
}
.title>input
{
  display: block;
  /* border-radius: 20rpx; */
}
/* 过滤栏 */
.menus
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  padding: 0rpx 20rpx;
  height: 60rpx;
  border-bottom:1px solid #e9e9e9;
}
.menu_item
{
  width: 177rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
/* //商品 */
.holder
{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 0px;
  flex-wrap: wrap;
}
.p_product
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  padding: 20rpx;
  background-color: #ffffff;
}
.p_product_right
{
  width: 550rpx;
}
.product_name
{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  height: 60rpx;
}
.p_product_info
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid #e9e9e9;
}
.p_product_info_left
{
  width: 550rpx;
}
.product_price
{
  font-size: 32rpx;
  font-weight: 600;
  color: #f10b0b;
  height: 60rpx;
}
.product_extra_info
{
  display: flex;
  flex-direction: row;
  height: 40rpx;
}
.product_price_old
{
  font-weight: 600;
}
.product_sale
{
  color: #656565;
  margin-left: 20rpx;
}
.p_product2
{
  margin: 20rpx 20rpx;
  background-color: #ffffff;
  width: 335rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.product_img
{
  width: 335rpx;
  height: 335rpx;
}