/* pages/category/category.wxss */
.title
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color:#e9e9e9;
  box-sizing: border-box;
}
.title>input
{
  display: block;
  /* border-radius: 20rpx; */
}
.ph_input
{
  font-size: 24rpx;
}
/* 菜单部分 */
.holder
{
  display: flex;
  flex-direction: row;
}
/* 左侧分类列表 */
.left_category
{
  width:250rpx;
  border-right: 1px solid #e9e9e9;
  height:100%;
}
.left_category_item
{
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #e9e9e9;
}
.right_category
{
  width:500rpx;
  height:100%;
}
.right_category_item>.name
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 40rpx;
}
.line
{
  width: 100rpx;
  height: 2rpx;
  background-color: #e9e9e9;
}
.txt
{
  padding: 0px 10px;
}
.p_child_category
{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.p_menu
{
  padding: 20rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 163rpx;
}
.menu_txt
{
  height: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}