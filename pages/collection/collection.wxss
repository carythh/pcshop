/* pages/collection/collection.wxss */
page
{
  background-color: #e9e9e9;
}
.p_product
{
  border-bottom: 1px solid #e9e9e9;
  background-color: #ffffff;
  margin-top: 10rpx;
  padding: 20rpx 0rpx;
}
.p_product_right
{
  width: 550rpx;
  padding: 0rpx 20rpx;
}
.product_name
{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  height: 60rpx;
}
.p_product_info
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}
.p_product_info_left
{
  flex-grow: 1;
}
.product_price
{
  font-size: 32rpx;
  font-weight: 600;
  color: #f10b0b;
  height: 60rpx;
}
.product_extra_info
{
  display: flex;
  flex-direction: row;
  height: 40rpx;
}
.product_price_old
{
  text-decoration: line-through;
}
.product_sale
{
  color: #656565;
  margin-left: 20rpx;
  font-size: 22rpx;
}
.delete
{
  padding: 0rpx 30rpx;
  font-size: 24rpx;
  border: 1px solid #656565;
  border-radius: 4rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}