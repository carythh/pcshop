/**index.wxss**/
/* 标题栏 */
button
{
  width: 100% !important;
  padding:0rpx !important;
}
.p_title
{
  display:flex;
  flex-direction:row;
  width: 100%;
}
.title
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color:#e9e9e9;
  box-sizing: border-box;
}
.title>input
{
  display: block;
  /* border-radius: 20rpx; */
}
.ph_input
{
  font-size: 24rpx;
}
/* 轮播图 */
.swiper1
{
  width:750rpx;
  height: 375rpx;
}
swiper-item>image
{
  width:100%;
  height:100%;
}
swiper .wx-swiper-dot {
  width: 20rpx;
  height: 10rpx;
  background: lightgray;
  border-radius: 10rpx;
}
 
/* 选中指示点的样式 */
swiper .wx-swiper-dot.wx-swiper-dot-active {
    width: 20rpx;
    height: 10rpx;
    background: white;
    border-radius: 10rpx;
}
/* 菜单 */
.p_menus
{
  display: flex;
  padding: 0rpx 0rpx;
  flex-wrap: wrap;
}
.p_menu
{
  padding: 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 187rpx;
}
.menu_txt
{
  font-size: 26rpx;
  font-weight: normal;
}
/* 纵向滚动信息 */
.p_notices
{
  padding: 10rpx 20rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #e9e9e9;
}
.snotice
{
  width: 670rpx;
  height: 100%;
}
.notice
{
  font-size: 26rpx;
  height: 100%;
  line-height: 60rpx;
  padding-left: 20rpx;
  color: #1196db;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.notice>image
{
  flex-grow: 0;
  flex-shrink:0;
}
.notice>.txt
{
  flex-grow: 1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 22rpx;
  padding: 0rpx 10rpx;
}
.notice>.more
{
flex-grow: 0;
}
/* 精品 */
.p_head
{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.p_head_left
{
  width: 540rpx;
}
.head_title
{
  font-size: 32rpx;
  font-weight: bolder;
}
.head_desc
{
  color: #656565;
}
.p_product
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #e9e9e9;
}
.activity
{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-image:linear-gradient(to right,#f10b0b, #f67a38);
  padding: 6rpx 20rpx;
  color: #ffffff;
  font-size: 22rpx;
}
.p_product_right
{
  width: 550rpx;
  padding: 0rpx 20rpx;
}
.product_name
{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  height: 60rpx;
}
.p_product_info
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}
.p_product_info_left
{
  width: 550rpx;
}
.product_price
{
  font-size: 32rpx;
  font-weight: 600;
  color: #f10b0b;
  height: 60rpx;
}
.product_extra_info
{
  display: flex;
  flex-direction: row;
  height: 40rpx;
}
.product_price_old
{
  text-decoration: line-through;
}
.product_sale
{
  color: #656565;
  margin-left: 20rpx;
  font-size: 22rpx;
}


.poster
{
  padding: 20rpx;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.poster_right
{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 20rpx;
}
.poster>.post_pintuan
{
  width: 280rpx;
  height: 280rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  padding: 20rpx;
}
.poster_right>.poster_miaosha
{
  width: 400rpx;
  height: 130rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  padding: 20rpx;
}
.poster_right>.poster_kanjia
{
  width: 400rpx;
  height: 130rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  padding: 20rpx;
}
.poster_title
{
  color: #ffffff;
  font-size: 22rpx;
  height: 40rpx;
}
.poster_desc
{
  color: #ffffff;
  font-size: 22rpx;
  height: 30rpx;
}



/* 快速选择 */
.p_category{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  padding-bottom: 20rpx;
}
.category
{
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.category>image
{
  width: 180rpx;
  height: 180rpx;
}
.category>.category_txt
{
  height: 40rpx;
  line-height: 40rpx;
}
.p_category>.category:nth-child(3n+0)
{
  border-bottom: 2px solid #47b479;
}
.p_category>.category:nth-child(3n+1)
{
  border-bottom: 2px solid #579afe;
}
.p_category>.category:nth-child(3n+2)
{
  border-bottom: 2px solid #ff6960;
}

/* 热销单品 */
.p_hot
{
  padding: 20rpx;
  background-color: #ffffff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: -135rpx;
  border-bottom: 1px solid #e9e9e9;
  padding: 20rpx;
  border-radius: 20rpx;
}
.hot_head
{
  width: 750rpx;
  height: 215rpx;
  background-size: 100% 100%;
}
.hot_product
{
  width: 220rpx;
  overflow: hidden;
  position: relative;
}
.hot_product>image
{
  width: 120rpx;
  height: 120rpx;
}
.hot_product_name
{
  width: 100%;
}
.top
{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}