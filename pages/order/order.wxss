/* pages/order/order.wxss */
.head
{
  padding: 30rpx 20rpx;
  background-color: #f10b0b;
}
.head_right
{
  flex-grow: 1;
  padding: 0rpx 20rpx;
}
.head_right>.info
{
  font-weight: 600;
  height: 40rpx;
  line-height: 40rpx;
}
.head_right>.fdate
{
  font-size: 22rpx;
  color: #e9e9e9;
  height: 40rpx;
  line-height: 40rpx;
}



.p_item
{
  flex-grow: 1;
  position: relative;
  padding: 20rpx 0rpx;
}
.p_item>.txt
{
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.p_item>.txt_item
{
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.line
{
  position: absolute;
  top: 70rpx;
  left: 50%;
  padding:0rpx 20rpx;
  height: 2rpx;
  background-color: #656565;
}
.line_selected
{
  position: absolute;
  top: 70rpx;
  left: 50%;
  padding:0rpx 20rpx;
  height: 2rpx;
  background-color: #f10b0b;
}




.p_xinfeng
{
  width: 100%;
  padding-bottom: 2rpx;
  box-sizing: border-box;
  background: linear-gradient(45deg, #f25953 12.5%, #fbfaf5 12.5%, #fbfaf5 25%, #5590d6 25%, #5590d6 37.5%, #fbfaf5 37.5%, #fbfaf5 50%, #f25953 50%, #f25953 62.5%, #fbfaf5 62.5%, #fbfaf5 75%, #5590d6 75%, #5590d6 87.5%, #fbfaf5 87.5%, #fbfaf5 100%);
  background-size: 70rpx 70rpx;
}
.p_address
{
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx 20rpx;
  height: 140rpx;
}
.address_left
{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  font-size: 22rpx;
  color: #656565;
  overflow: hidden;
}
.select_address
{
  width: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.p_address .l1
{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 50rpx;
  overflow: hidden;
}
.p_address .l2
{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 50rpx;
  overflow: hidden;
}
.moren
{
  font-size: 22rpx;
  flex-grow: 0;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.address
{
  flex-grow: 1;
}
.mobile
{
  padding-left: 20rpx;
}




.product
{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 10rpx 20rpx;
  border: 1px solid #e9e9e9;
}
.product>image
{
  width: 120rpx;
  height: 120rpx;
  flex-grow: 0;
  flex-shrink: 0;
}
.product_info
{
  padding-left:20rpx ;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  overflow: hidden;
}
.p_line1
{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.product_name
{
  font-weight: 600;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  flex-grow: 1;
}
.product_count
{
  padding: 0rpx 20rpx;
  flex-grow: 0;
  color: #656565;
}
.p_line2
{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #656565;
}
.product_price
{
  width: 100%;
}
.comment
{
  padding: 0rpx 10rpx;
  font-size: 22rpx;
  color: #656565;
  border: 1px solid #656565;
}
.product_price>.txt
{
  height: 40rpx;
  line-height: 40rpx;
  flex-grow: 1;
}



.info
{
  padding: 0rpx 20rpx;
  height: 50rpx;
}
.info_right
{
  flex-grow: 1;
  font-size: 22rpx;
}
.copy
{
  font-size: 18rpx;
  border: 1px solid #656565;
  padding: 0rpx 10rpx;
  margin-left: 10rpx;
}





.btns
{
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #e9e9e9;
}
.btn_disabled
{
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  padding: 0rpx 50rpx;
  margin-left: 20rpx;
  color: #656565;
  border: 1px solid #e9e9e9;
}
.btn
{
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  padding: 0rpx 50rpx;
  margin-left: 20rpx;
  color: #ffffff;
  background-color: #f10b0b;
}