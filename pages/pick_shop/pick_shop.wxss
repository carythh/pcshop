/* pages/pick_shop/pick_shop.wxss */
.p_shop
{
  box-sizing: border-box;
}
.shop
{
  padding: 20rpx 20rpx;
  width: 100%;
  border-bottom: 1px solid #e9e9e9;
}
.shop_info
{
  flex-grow: 1;
  padding: 0rpx 20rpx;
  overflow: hidden;
}
.shop_name
{
  height: 50rpx;
  line-height: 50rpx;
}
.shop_address
{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  width: 100%;
  overflow: hidden;
}
.shop_contact
{
  flex-grow: 0;
}
.distance
{
  font-size: 22rpx;
  height: 40rpx;
  line-height: 40rpx;
}