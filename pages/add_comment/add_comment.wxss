/* pages/add_comment/add_comment.wxss */

.product
{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #e9e9e9;
}
.product>image
{
  width: 120rpx;
  height: 120rpx;
  flex-grow: 0;
  flex-shrink: 0;
}
.product_info
{
  padding-left:20rpx ;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  overflow: hidden;
}
.p_line1
{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.product_name
{
  font-weight: 600;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  flex-grow: 1;
}
.product_count
{
  padding: 0rpx 20rpx;
  flex-grow: 0;
  color: #656565;
}
.p_line2
{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #656565;
}
.product_price
{
  width: 100%;
}
.comment
{
  padding: 0rpx 10rpx;
  font-size: 22rpx;
  color: #656565;
  border: 1px solid #656565;
}
.product_price>.txt
{
  height: 40rpx;
  line-height: 40rpx;
  flex-grow: 1;
}



.p_star
{
  height: 80rpx;
  padding: 0rpx 20rpx;
}
.p_star>.txt
{
  padding: 0rpx 10rpx;
}
.count
{
  font-size: 22rpx;
  padding: 0rpx 10rpx;
}
.content
{
  width: 710rpx;
  margin: 20rpx;
  background-color: #e9e9e9;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.imgs
{
  padding: 20rpx 0rpx;
  flex-wrap: wrap;
}
.img
{
  position: relative;
}
.delete_img
{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}
.add_img
{
  border: 1px solid #656565;
  border-radius: 10rpx;
}

.btns
{
  padding: 20rpx 0rpx;
}
.btn
{
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  text-align: center;
  background-color: #f10b0b;
  width: 600rpx;
}