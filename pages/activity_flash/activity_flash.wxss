/* pages/activity_group/activity_group.wxss */
page
{
  background-color: #e9e9e9;
}
.p_section
{
  height: 100rpx;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0rpx 20rpx;
}
.sections
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.section
{
  width: 140rpx;
  padding: 0rpx 20rpx;
}
.time
{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 32rpx;
  
}
.status_on
{
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #f10b0b;
  text-align: center;
  font-optical-sizing: #ffffff;
  font-size: 22rpx;
  color: #ffffff;
}
.status
{
  height: 30rpx;
  border-radius: 30rpx;
  text-align: center;
  font-size: 22rpx;
  color: #656565;
}
.p_flash
{
  padding: 0rpx 20rpx;
}
.flash
{
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}
.flash_right
{
  width: 480rpx;
  padding: 0rpx 20rpx;
}
.flash_product_name
{
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
}
.flash_price
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.price
{
  color: #f10b0b;
}
.price_old
{
  text-decoration:line-through;
  font-size: 22rpx;
  color: #656565;
}
.flash_extra_info
{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-start;
}
.flash_info_left
{
  width: 330rpx;
}
.flash_limit
{
  font-size: 22rpx;
  color: #656565;
  height: 30rpx;
  line-height: 30rpx;
}
.flash_process
{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #817f7f;
  border-radius: 30rpx;
  overflow: hidden;
}
.process
{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  background-color: #f10b0b;
  height: 100%;
}
.number
{
  width: 100%;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 18rpx;
  color: #ffffff;
  text-align: center;
  z-index: 1;
}
.flash_btn
{
  width: 130rpx;
  margin-left: 20rpx;
  background-color: #f10b0b;
  border-radius: 30rpx;
  height: 40rpx;
  font-size: 22rpx;
  line-height: 40rpx;
  text-align: center;
  color: #ffffff;
}