/* pages/product/product.wxss */
.swiper1
{
  width:750rpx;
  height: 750rpx;
}
swiper-item>image
{
  width: 100%;
  height: 100%;
}
swiper-item>video
{
  width: 100%;
  height: 100%;
}
.p_price
{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0rpx 20rpx;
}
.price
{
  color: #f10b0b;
  font-size: 32rpx;
}
.price_old
{
  color: #656565;
  text-decoration: line-through;
  flex-grow: 1;
}
.share
{
  width: 30rpx;
  height: 30rpx;
}
.p_title
{
  font-size: 26rpx;
  font-weight: 600;
  padding: 0rpx 20rpx;
  text-overflow:ellipsis;
  word-wrap:break-word
}
.p_extra_info
{
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0rpx 20rpx;
  border-bottom: 1px solid #e9e9e9;
}
.p_extra_info>view
{
  width: 33.3%;
  color: #656565;
}
.group_sale
{
  text-align: center;
}
.buy_limit
{
  text-align: right;
}
.p_join_group
{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0rpx 20rpx;
}
.join_title
{
  font-size: 32rpx;
  font-weight: 600;
  text-align: left;
  width: 100%;
  padding: 20rpx 0rpx;
}
.join
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 20rpx 0rpx;
}
.user_logo
{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  /* border: 1px solid #f10b0b; */
}
.user_info
{
  padding: 0rpx 10rpx;
}
.join_info
{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0rpx 10rpx;
}
.join_remain
{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}
.remain
{
  color: #f10b0b;
}
.join_limit
{
  font-size: 18rpx;
  color: #656565;
}
.join_btn
{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 0rpx 20rpx;
  background-color: #f10b0b;
}
.p_jifen
{
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  border-bottom: 1px solid #e9e9e9;
}
.txt
{
  width: 120rpx;
}
.jifen
{
  height: 40rpx;
  color: #f10b0b;
  border-top: 2rpx solid #f10b0b;
  border-bottom: 2rpx solid #f10b0b;
  display: block;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 22rpx;
}
.left_circle
{
  position: absolute;
  top:7rpx;
  left: -11rpx;
  width: 18rpx;
  height: 18rpx;
  border: 2rpx solid #f10b0b;
  border-radius: 10rpx;
  background-color: #ffffff;
}
.left_top_line
{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 2rpx;
  height: 7rpx;
  background-color: #f10b0b;
}
.left_bottom_line
{
  position: absolute;
  top: 25rpx;
  left: 0rpx;
  width: 2rpx;
  height: 15rpx;
  background-color: #f10b0b;
}
.right_circle
{
  position: absolute;
  top:7rpx;
  right: -11rpx;
  width: 18rpx;
  height: 18rpx;
  border: 2rpx solid #f10b0b;
  border-radius: 10rpx;
  background-color: #ffffff;
}
.right_top_line
{
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 2rpx;
  height: 7rpx;
  background-color: #f10b0b;
}
.right_bottom_line
{
  position: absolute;
  top: 25rpx;
  right: 0rpx;
  width: 2rpx;
  height: 15rpx;
  background-color: #f10b0b;
}
.p_coupon
{
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  border-bottom: 1px solid #e9e9e9;
}

.coupon
{
  height: 40rpx;
  color: #f10b0b;
  border-top: 2rpx solid #f10b0b;
  border-bottom: 2rpx solid #f10b0b;
  display: block;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 22rpx;
}
.p_activity
{
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  border-bottom: 1px solid #e9e9e9;
}
.item_activity
{
  height: 40rpx;
  background-color: #f10b0b; /* 不支持线性的时候显示 */
  background-image: linear-gradient(to right, #f10b0b , #f39d9d);
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 22rpx;
  color: #ffffff;
}
.split
{
  width: 100%;
  height: 15rpx;
  background-color: #e9e9e9;
}
.p_spec
{
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  border-bottom: 1px solid #e9e9e9;
}
.selected_spec
{
  width: 560rpx;
  font-weight: 600;
}
.h_comment
{
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  border-bottom: 1px solid #e9e9e9;
}
.h_comment>.txt
{
  width: 200rpx;
}
.p_percent
{
  width: 480rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.percent
{
  color:#f10b0b ;
}
.head_comment
{
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
}
.username
{
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.info_comment
{
  padding: 0rpx 20rpx;
  color: #656565;
  font-size: 22rpx;
}
.content
{
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #e9e9e9;
}
.h_detail
{
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}

/* 底部 */
.bottom
{
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  height: 100rpx;
  width: 100%;
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
}
.item_bottom
{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.item_bottom>image
{
  width: 40rpx;
  height: 40rpx;
}
.item_bottom>.number
{
  position: absolute;
  right: 10rpx;
  top: 0rpx;
  background-color: #f10b0b;
  width: 30rpx;
  height: 30rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  border-radius: 30rpx;
  color: #ffffff;
  border: none;
}
.item_bottom>.txt
{
  font-size: 18rpx;
  text-align: center;
}
.add_cart
{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-top-left-radius: 80rpx;
  border-bottom-left-radius: 80rpx;
  background-color: #000000;
  text-align: center;
  color: #ffffff;
}
.buy
{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-top-right-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  background-color: #f10b0b;
  text-align: center;
  color: #ffffff;
}

.p_select
{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  background-color: #00000066;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}
.header_select
{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  background-color: #ffffff;
  width: 100%;
  padding:20rpx;
  box-sizing: border-box;
}
.header_select>image
{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.header_select_right
{
  width: 580rpx;
  display: flex;
  flex-direction: column;
}
.header_product_name
{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}
.header_select_extra_info
{
  display: flex;
  flex-direction: row;
  height: 40rpx;
  line-height: 40rpx;
}
.header_price
{
  font-size: 32rpx;
  color: #f10b0b;
}
.header_stock
{
  font-size: 22rpx;
  color: #656565;
  margin-left: 20rpx;
}
.select_spec
{
  width: 100%;
  background-color: #ffffff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.spec_name
{
  height: 50rpx;
  line-height: 50rpx;
}
.specs
{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  justify-content: flex-start;
}
.spec
{
  width: auto;
  border: 1px solid #656565;
  border-radius: 8rpx;
  padding: 0rpx 20rpx;
  margin-right:20rpx ;
  font-size: 22rpx;
}
.spec_disabled
{
  width: auto;
  border: 1px solid #656565;
  border-radius: 8rpx;
  padding: 0rpx 20rpx;
  margin-right:20rpx ;
  font-size: 22rpx;
  background-color: #656565;
}
.spec_selected
{
  width: auto;
  /* border: 1px solid #656565; */
  border-radius: 8rpx;
  padding: 5rpx 20rpx;
  margin-right:20rpx ;
  font-size: 22rpx;
  color: #ffffff;
  background-color: #f10b0b;
}
.p_number
{
  width: 100%;
  background-color: #ffffff;
  padding:0rpx 20rpx;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}
.number_name
{
  height: 50rpx;
  line-height: 50rpx;
}
.subduce
{
  width: 60rpx;
  height: 40rpx;
  border: 1px solid #656565;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
  text-align: center;
  line-height: 40rpx;
}
.add
{
  width: 60rpx;
  height: 40rpx;
  border: 1px solid #656565;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  text-align: center;
  line-height: 40rpx;
}
.number
{
  width: 60rpx;
  height: 40rpx;
  border: 1px solid #656565;
  text-align: center;
  line-height: 40rpx;
}
